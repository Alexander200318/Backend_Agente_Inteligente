# ============================================
#   APLICACIÓN
# ============================================
APP_NAME=CallCenterAI - Chatbot Institucional
APP_VERSION=3.0.0
DEBUG=True

# ============================================
#   BASE DE DATOS MYSQL
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=chatbot_institucional

# ============================================
#   JWT Y SEGURIDAD
# ============================================
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de seguridad
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8

# ============================================
#   CORS - Orígenes permitidos
# ============================================
# En desarrollo puedes usar "*" pero en producción especifica los dominios
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081","http://127.0.0.1:8081","http://192.168.5.6:8081"]

# ============================================
#   OLLAMA (IA LOCAL)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_BASE=llama3
OLLAMA_MODEL=llama3:8b

# Otros modelos disponibles:
# llama3:8b (recomendado - 5GB)
# llama2:7b (alternativa - 4GB)
# mistral:7b (rápido - 4GB)
# phi:2.7b (liviano - 1.6GB)

# ============================================
#   REDIS (CACHE)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
#   CHROMADB (VECTOR STORE)
# ============================================
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=knowledge_base

# ============================================
#   EMBEDDINGS
# ============================================
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Otros modelos:
# sentence-transformers/all-MiniLM-L6-v2 (inglés, rápido)
# sentence-transformers/paraphrase-multilingual-mpnet-base-v2 (mejor calidad)

# ============================================
#   CHATBOT
# ============================================
BOT_NAME=TecAI
BOT_WELCOME_MESSAGE=¡Hola! Soy el asistente virtual de TEC AZUAY. ¿En qué puedo ayudarte hoy?
DEFAULT_AGENT_ID=1

# ============================================
#   LÍMITES Y TIMEOUTS
# ============================================
MAX_TOKENS=2000
TIMEOUT_SECONDS=30

# ============================================
#   TEMPLATES Y ARCHIVOS ESTÁTICOS
# ============================================
TEMPLATES_DIR=templates
STATIC_DIR=static